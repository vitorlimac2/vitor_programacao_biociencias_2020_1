from sys

def soma_recursiva(n):
  if(n > 0):
    resultado = n + soma_recursiva(n - 1)
  else:
    resultado = 0
  def tri_recursion(k):
  if(k > 0):
    result = k + tri_recursion(k - 1)
    print(result)
  else:
    result = 0
  return result

